<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="import:com.google.gwt.user.client.widget"
	xmlns:d="urn:import:com.google.gwt.dom.client">

	<ui:style>
		
		.form {
			border: 1px solid #ccc;
			width: 400px;
			margin: 0;
			padding: 0;
			background: #fff !important;
		}
		
		.content {
			margin: 0;
			padding: 0;
		}
		
		.form fieldset {
			padding-bottom: 9px;
			margin-bottom: 17px;
			overflow: hidden;
		}
		
		.form ul li {
			margin-bottom: 8px;
			overflow: hidden;
			zoom: 1;
		}
		
		.form ul li label {
			float: left;
			font-weight: bold;
			margin-right: 10px;
			padding-top: 2px;
			text-align: right;
		}
		
	
		.form .error-message {
			color: red;
			display: none;
		}
		
		.form .actions {
			text-align: center;
			line-height: 2em;
			margin-top: 17px;
		}
		
		.form .one-column {
			margin-left: 320px;
		}
		
		.form a:hover {
			cursor: pointer;
		}
		
		.btn-primary {
			background: #0571A6;
			border-width: 1px;
			border-style: solid;
			border-color: #004a73;
			color: #fff;
			-webkit-border-radius: 3px;
			cursor: pointer;
			font-size: 12px;
			line-height: 1.35;
			margin: 0;
			overflow: visible;
			padding: 3px 10px 2px;
			text-decoration: none !important;
			vertical-align: top;
			width: auto !important;
		}
		
		.btn-primary:hover {
			background-color: #04608E;
		}
		
		.btn-primary:active {
			background-color: #0389CE;
		}
		
		a.btn-primary {
			display: inline-block !important;
			padding: 3px 10px;
		}
		
		a.btn-primary:hover {
			text-decoration: none !important;
		}
		
		.center {
			text-align: center;
		}
		
		.checkbox {
			margin: 10px;
		}
		
		#login-form {
	font-size: 1em;
	padding: 10px;
}

#login-form ul {
	width: 100%;
	margin-right: 10px;
	float: left;
}

#login-form ul li {
	margin-bottom: 8px;
	overflow: hidden;
	zoom: 1;
	padding-left: 110px;
}

#login-form ul li label {
	float: left;
	margin-right: 10px;
	padding-top: 2px;
	text-align: right;
}

#login-form #login-error-message {

	display: none;
}

#login-form ul li label {
	margin-left: -110px;
	width: 130px;
	padding-top:10px;
}

#login-form .actions {
	text-align: center;
	line-height: 2em;
	margin-top: 17px;
}

#login-form .one-column {
	margin-left: 320px;
}

#login-form a:hover {
	cursor: pointer;
}
#ePadLicenseAgreement p {
	padding:10px;
	
	}
	
	.agree {
	padding:10px;
	}
	
		#login-form li.redMsg {

			padding-left: 10px;
			margin: 5px 0px 0px 60px;
			align: center;

		}
		
	</ui:style>

	<g:HTMLPanel styleName="{style.form}">
		<g:HTMLPanel styleName="{style.content}">
			<div id="login-form">
				<fieldset>
					<legend>Sign in to your ePAD Account</legend>
					<ul>
						<li id="loginUserName" valign="middle">
							<label>User name</label>
							<g:TextBox width="150px" ui:field="username" debugId="usernameInput"></g:TextBox>
						</li>
						<li id="loginUserPassword">
							<label>Password</label>
							<g:PasswordTextBox width="150px" ui:field="password"
								debugId="passwordInput"></g:PasswordTextBox>
						</li>
				
						<!-- <li class="link" id="recoverUsernameId">
							<g:Anchor ui:field="recoverUsername">
								<span>Recover Username</span>
							</g:Anchor>
						</li>

						<li class="link" id="recoverPasswordId">
							<g:Anchor ui:field="recoverPassword">
								<span>Reset Password</span>
							</g:Anchor>
						</li> -->
						
						<li ui:field="loginErrorMessage" style="padding-left:0px;">this is my error</li>
					</ul>
				</fieldset>

				<p class="actions">
					<g:Button ui:field="okButton" debugId="signInBtn"
						styleName="{style.btn-primary}">Sign In</g:Button>
					<g:Button ui:field="cancelButton" debugId="cancelBtn"
						styleName="{style.btn-primary}">Cancel</g:Button>
				</p>
			</div>



			<div id="recoverUsernamePasswordForm" style="display:none">
				<fieldset>
					<legend>Recover Password</legend>
					<ul>
						<li ui:field="recoverGreetingMessage" debugId="recoverGreetingMsg" />
						<br />
						<li id="recoverPassword" valign="middle">
							<label>Email</label>
							<g:TextBox width="310px" ui:field="emailAddress"
								debugId="emailAddressInput"></g:TextBox>
							<br />
							<li class='{style.errorMessage}' ui:field="recoverErrorMessage"
								debugId="recoverErrMsg" />
						</li>
					</ul>
				</fieldset>
				<p class="actions">
					<g:Button ui:field="submitRecoverButton" debugId="submitRecoverEmailBtn"
						styleName="{style.btn-primary}">Submit</g:Button>
				</p>
			</div>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>